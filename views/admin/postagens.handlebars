<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mt-1">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>
            Categoria:
            {{#if categoria.nome}}
            {{categoria.nome}}
            {{else}}
            Sem categoria
            {{/if}}
        </small>
        <br />
        <small>Data: {{data}}</small>
        <br />
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
        <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger mt-3">Deletar postagem</button></a>
    </div>
</div>
{{else}}
<h4 class="mt-4">Nenhuma postagem cadastrada.</h4>
{{/each}}