<h2>Meu perfil: </h2>

<div class="card mt-4">
    <div class="card-body text-center">
        <div class="row align-items-center">
            <div class="col-md-2">
                <div class="profile-wrapper">
                    {{#if usuario.imagem}}
                    <img src="{{usuario.url}}" class="img-fluid rounded-circle profileImage"
                        style="width: 150px; height: 150px;" alt="Foto de perfil">
                    {{else}}
                    <img src="/img/user_default.jpg" class="img-fluid rounded-circle profileImage"
                        style="width: 150px; height: 150px;" alt="Foto de perfil">
                    {{/if}}

                    <div class="edit-icon">
                        <a href="/usuarios/editProfileImage" style="text-decoration: none">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-pencil" viewBox="0 0 16 16">
                                <path
                                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                            </svg> Alterar
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <small>{{usuario.nome}}</small>
            </div>
            <div class="col-md-3">
                <small>{{usuario.email}}</small>
            </div>
            <div class="col-md-1">
                {{#if usuario.isAdmin}}
                <button type="button" class="btn btn-primary mt-2">Usuário Admin</button><br />
                {{else}}
                <button type="button" class="btn btn-secondary mt-2">Usuário Padrão</button><br />
                {{/if}}
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-danger mt-2" data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop">Deletar perfil</button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Deletar usuário?</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Essa ação não poderá ser desfeita.
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <div class="col-md-3">
                                <form action="/usuarios/delete" method="post">
                                    <input type="hidden" name="id" value="{{usuario._id}}">
                                    <button type="submit" class="btn btn-danger">Deletar perfil</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>